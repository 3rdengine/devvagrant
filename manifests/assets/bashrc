alias burpapache="sudo /etc/init.d/apache2 restart"


function skip()
{
	NUMBEROFTIMES=5
	if [[ $1 ]]; then
		let NUMBEROFTIMES=$NUMBEROFTIMES*$1
	fi
	
	for (( i=1; i <= $NUMBEROFTIMES; i++ ))
	do
		printf "\n"
	done
}

